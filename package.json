{
  "name": "msb",
  "version": "1.0.0",
  "description": "A framework to simplify the implementation of an event-bus oriented microservices architecture",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "msb": "./bin/msb",
    "msb-save": "./bin/msb-save"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tcdl/msb.git"
  },
  "scripts": {
    "build": "tsc",
    "cs": "tslint --project tsconfig.json -t stylish",
    "test": "npm run cs && npm run build && npm run test:unit && npm run test:functional && npm run test:integration",
    "test:functional": "NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha ./test/functional/",
    "test:integration": "NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha ./test/integration/",
    "test:unit": "NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha ./test/unit/"
  },
  "dependencies": {
    "amqp-coffee": "^0.1.25",
    "async": "^2.0.0",
    "debug": "^2.1.1",
    "lodash": "^4.6.1",
    "lodash.get": "^4.1.2",
    "minimist": "^1.1.1",
    "split": "^1.0.0",
    "tv4": "^1.1.9"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/core-js": "^0.9.34",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "@types/tv4": "^1.2.28",
    "chai": "^3.5.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.1.2",
    "simple-mock": "^0.7.2",
    "tslint": "^4.0.0-dev.1",
    "typescript": "^2.1.1"
  },
  "engines": {
    "node": ">=4"
  }
}
